  <style>
    .marginB20{
      margin-bottom: 20px;
      margin-right: 20px;
    }
    /* Sử dụng flexbox để đặt các nhóm ngang nhau */
    .container {
      display: flex;
      align-items: center;
    }

    .btnView{
      background-color: bisque;
      height: 30px;
      width: 80px;
      align-items: center;
      border-radius: 5px;
    }
    .btnView:hover {
      background-color: #ffcc00; /* Màu nền mới khi hover */
    }

    .search-container {
      position: relative;
      display: inline-block;
    }

    .search-input {
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
      width: 300px;
      height: 40px;
    }

    .search-icon {
      position: absolute;
      right: 8px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
    }

    .listview {
      display: none;
      position: absolute;
      z-index: 1;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
      background-color: #fff;
      width: 280px;
    }

    .list-item {
      padding: 8px;
      cursor: pointer;
    }

    .list-item:hover {
      background-color:bisque; /* Màu nền khi di chuột vào */
    }
    .hv{
      text-decoration: none;
    }
    .hv:hover {
      text-decoration: underline;
    }
  </style>
  
</head>

<body>
  
  

