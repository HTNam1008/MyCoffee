          </div>

        
          <button
            class="btnView " type="submit" style = "margin-top: 24px;" form="form"> 
            <i class="fa-solid fa-eye"></i> Xem
          </button>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th scope="col" style="padding-left: 30px;">ID</th>
        <th scope="col">DATE</th>
        <th scope="col">TIME</th>
        <th scope="col">ITEM</th>
        <th scope="col">VAT</th>
        <th scope="col">DISCOUNT</th>
        <th scope="col">AMOUNT</th>
        <th scope="col">CUSTOMER</th>

      </tr>
    </thead>
    <tbody>
       {{#each orders}}
       {{#unless admin}}
          <tr>
            <th scope="row" style="padding-left: 30px;">{{this.stt}}</th>
            <td>{{this.date}}</td>
            <td>{{this.date}}</td>
            <td>{{this.item}}</td>
            <td>{{this.vat}}</td>
            <td>{{this.discount}}</td>
            <td>{{this.amount}}</td>
            <td>{{this.customer}}</td>
          </tr>

      {{/unless}}
      
      {{else}}
        <tr>
          <td colspan="5" class="text-center">
            Chưa có dữ liệu.
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <script>
      function toggleListview() {
        const listview = document.querySelector('.listview');
        listview.style.display = (listview.style.display === 'block') ? 'none' : 'block';
      }

      function selectItem(item) {
        const selectedItemText = item.textContent;
        const searchInput = document.querySelector('.search-input');
        searchInput.value = selectedItemText;
        toggleListview(); // Ẩn danh sách sau khi chọn
      }

      document.addEventListener('click', function(event) {
        const listview = document.querySelector('.listview');
