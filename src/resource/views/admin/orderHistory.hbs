        // Ẩn danh sách khi nhấp vào nơi khác ngoài ô tìm kiếm và danh sách
        if (!event.target.matches('.search-input') && !event.target.matches('.search-icon') && !event.target.matches('.list-item')) {
        listview.style.display = 'none';
        }
      });

