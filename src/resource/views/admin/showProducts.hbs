<head>
    <title>Product Information</title>
</head>

<body>
    <h1>Product Information</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Image</th>
                <th>Price</th>
                <th>Slug</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.type}}</td>
                <td><img
                  class="card-img-top"
                  src="{{this.image}}"
                  alt="{{this.name}}"
                /></td>
                <td>{{this.price}}</td>
                <td>{{this.slug}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</body>

</html>